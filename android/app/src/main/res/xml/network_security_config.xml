<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- 
        Development mode: Allow cleartext traffic for all domains
        This allows connection to local development server with any IP address
        IP address is dynamically configured via AppConfig.local_config.dart
    -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </base-config>
</network-security-config>
